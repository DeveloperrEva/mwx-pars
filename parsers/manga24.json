				"genres" : "@comedy",
				"status" : "complete",
				"genres_count" : ">=7",
				"chapters_count" : ">=540",
				"chapters" : [
					{ "folder": "001/",
                      "link": "https://manga24.ru/fairytail/001",
                      "title": "Глава #001"
					},
					{ "title" : "Глава #003", "link" : "https://manga24.ru/fairytail/003" }
				]
			}
		},
		
		{
			"proc" : "chapter_complete",
			"link" : "https://manga24.ru/fairytail/001",
			"assert" : {
				"pages" : [
					{"image": "https://manga24.ru/Content/pages/fairytail/001/001.jpeg"},
                    {"image": "https://manga24.ru/Content/pages/fairytail/001/002.png"},
                    {"image": "https://manga24.ru/Content/pages/fairytail/001/003.png"}
				]
			}
		}
	]
}